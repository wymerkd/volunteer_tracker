<h1>Update <%= @project.title() %></h1>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title">Retitle project</label>
  <input id="title" name="title" type="text">

  <button type="submit" class="danger">Update Project</button>
</form>

<p><a href="/projects">Return to project list</a></p>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit"class="danger">Delete project</button>
</form>
