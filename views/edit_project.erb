<h1>Update <%= @project.name() %></h1>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename project</label>
  <input id="name" name="name" type="text">

  <button type="submit"class="danger">Update</button>
</form>

<p><a href="/projects">Return to project list</a></p>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit"class="danger">Delete project</button>
</form>
