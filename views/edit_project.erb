<h1>Update <%= @album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename album</label>
  <input id="name" name="name" type="text">

  <label for="name">Rename year</label>
  <input id="year" name="year" type="text">

  <label for="name">Rename genre</label>
  <input id="name" name="genre" type="text">

  <label for="name">Rename artist</label>
  <input id="name" name="artist" type="text">

  <button type="submit"class="danger">Update</button>
</form>

<p><a href="/albums">Return to album list</a></p>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit"class="danger">Delete album</button>
</form>
