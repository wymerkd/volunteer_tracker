<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @volunteer.project.title %></h3>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename Volunteer</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update Volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project.id %>">Back to <%= @volunteer.project.title %></a>
